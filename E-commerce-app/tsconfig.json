{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node", 
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["vitest", "jest"],
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "include": ["src"]
}